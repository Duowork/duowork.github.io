---
import BaseHead from "../components/BaseHead.astro";
import { ToastContainer } from "react-toastify";
import CustomCursor from "@components/custom-cursor.astro";
---

<html lang="en">
  <!-- Document head -->
  <BaseHead />

  <body>
    <main id="duowork" class="relative">
      <slot />
    </main>

    {/* Toast notification container for when form is submitted */}
    <ToastContainer
      client:only="react"
      position="top-right"
      autoClose={5000}
      hideProgressBar={false}
      newestOnTop={false}
      closeOnClick
      rtl={false}
      pauseOnFocusLoss
      draggable
      pauseOnHover
      theme="dark"
    />

    <!-- Custom cursor -->
    <CustomCursor />
  </body>
</html>

<style is:global lang="scss">
  @import "../styles/main.scss";
</style>
