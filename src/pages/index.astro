---
import BaseLayout from "@layouts/BaseLayout.astro";
import HeroSection from "@components/home/HeroSection.astro";
import ServiceSection from "@components/home/serviceSection/ServiceSection.astro";
import PortfolioSection from "@components/home/portfolioSection/PortfolioSection.astro";
import ProcessSection from "@components/home/workProcessSection/ProcessSection.astro";
import ToolsSection from "@components/home/toolsSection/ToolsSection.astro";
import ContactSection from "@components/home/contactSection/ContactSection.astro";
---

<BaseLayout>
  <!-- Hero -->
  <HeroSection />

  <!-- Agency's services -->
  <ServiceSection />

  <!-- Agency's porfolio -->
  <PortfolioSection />

  <!-- Agency's process -->
  <ProcessSection />

  <!-- Agency's testimonials -->
  <!-- <TestimonialSection> -->

  <!-- Agency's work tools -->
  <ToolsSection />

  <!-- Contact section -->
  <ContactSection />
</BaseLayout>

<style is:global lang="scss">
  @import "../styles/main.scss";

  .section-heading {
    .section-tag {
      display: block !important;
      text-align: center;
      font-size: medium;
      font-weight: bold;
      color: $secondary-color;
      margin-bottom: 1.25rem;
    }

    .section-title {
      font-size: 1.875rem;
      font-weight: bold;
      margin-top: 0.2rem;
      margin-bottom: 1.25rem;
      text-align: center;

      .service-title__highlight {
        @extend .custom-bg-green-accent !optional;
        font-family: $font-family-title;
      }
    }

    .section-description {
      text-align: center;
      line-height: 1.375;
      max-width: 35rem;
      max-width: 35rem;
      font-size: small;
      font-weight: 300;
      margin-top: 1.25rem;
      margin-bottom: 2.5rem;
      margin-left: auto;
      margin-right: auto;
    }
  }
</style>
